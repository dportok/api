version: '2'
services:
  nginx:
    image: nginx
    ports:
      - '80:80'
    volumes:
      - '{{ app_path }}/http.conf:/etc/nginx/conf.d/default.conf'
  query_service:
    image: app_query_service
    hostname: query-service
    environment:
      REPO_PATH: /data/localrepo
    volumes:
      - '/data/localrepo:/data/localrepo'